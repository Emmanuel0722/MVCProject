@model MVCProject.Models.Person

@{
    ViewData["Title"] = "Agregar";
}

<h1 class="text-center">Agregar Persona</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label"></label>
                <input asp-for="firstName" class="form-control" onkeypress="return soloLetras(event)" required="Campo Requerido!" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" onkeypress="return soloLetras(event)" required="Campo Requerido!" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cellPhone" class="control-label"></label>
                <input asp-for="cellPhone" class="form-control" onkeypress="return soloNumeros(event)" required="Campo Requerido!" />
                <span asp-validation-for="cellPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="gender" class="control-label"></label>
                <select name="gender" class="form-control">
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
                <span asp-validation-for="gender" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Agregar" class="btn btn-primary" /> | 
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>